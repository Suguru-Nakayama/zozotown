%ul#top__left__search__list.clearfix
  - shops.each_with_index do |shop, i|
    - case i
    - when 0
      - color = "first-color"
    - when 1
      - color = "second-color"
    - when 2
      - color = "third-color"
    - else
      - color = "normal-color"
    %li
      .rank-icon{class: color}
        %i.fa.fa-circle.rank-circle
          .rank-num
            = i+1
      = link_to shop.name, shop_path(shop), class: "list-title link-list"
