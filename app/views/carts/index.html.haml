.wrapper
  .header
    %i.fas.fa-shopping-cart
    %h1
      ショッピングカート
    %img{alt: "広告", src: "http://zozo.jp/_cart/order/img/step_01.gif"}
  .main-content
    .left-content
      %img{alt: "商品イメージ", src: "https://img4.zozo.jp/pc/zozoomake/201809/omake_pc_cart_men.jpg"}
        .c.items-content
          - @item_nums.each do |item_num|
            .items
              %a{ :href => 'http://google.co.jp' }
                / shopsのコントローラが整い次第、商品詳細ページへのリンクをつける
                %img{alt: "商品イメージ", height: "150", width: "125", src: "#{item_num.item.images[0].url}"}
              .name
                %p
                  = item_num.item.shop.name
                %p
                  = item_num.item.brand.name
                %p
                  = item_num.item.name
                %p
                  カラー：
                  = item_num.stock.color
                %p
                  サイズ：
                  =item_num.stock.size
                .red-text 返品・交換対象外
              .price
                = number_to_currency(item_num.item.price, :unit => "￥", :precision => 0)
              .number-area
                .number-box
                  .btn
                    = link_to "ー", carts_destroy_path(@items, params: {item_id: item_num.item.id}), method: :delete
                  .number
                    = @count[item_num.number]
                  .btn
                    = link_to "＋", carts_create_path(@items, params: {item_id: item_num.item.id, cart_id: @cart.id, item_num_id: item_num.id}), method: :get
              .delete-box
                = link_to "削除", carts_destroy_path(@items, params: {id: item_num.item.id}), method: :delete
        .total
          .total-right
            %p 商品合計
            .price
              = number_to_currency(@total_price, unit: "￥", precision: 0)
        .payment
          %p
            %b ツケ払いできます。
            お支払いは
            %span 11月28日
            でOK
            %a{ :href => 'http://google.co.jp' }詳細
        .cart-in-item
          %h2 以前カートに入れたアイテム
          = render partial: "cart_item", collection: @past_item_nums, as: "item_num"

        .item-content
          %h3 チェックしたアイテム
          %ul#top__center__pickup__contents.clearfix
            - @checked_items.each do |item|
              #top__center__pickup__contents__item
                - if item.images[0]
                  = render partial: 'tops/item', locals: {item: item, image_size: "middle", rank_num: 0, coupon: 0}
        .item-ranking
          %h3 人気アイテムランキング
          %ul#top__center__pickup__contents.clearfix
            - 15.times.each do |i|
              #top__center__pickup__contents__item
                -# = render partial: 'tops/item', locals: {image_size: "middle", rank_num: 0, coupon: 0, shop_image: false}
    .cart-next
      .form
        %a{ :href => 'http://google.co.jp' }レジへ進む
        .postage
          .postage-text
            %i.fas.fa-exclamation-circle
            .text
              %p 送料は一律200円になりました。
              .more 詳細はこちら
        .rapping
          .rapping-text
            %i.far.fa-check-circle
            .text-box
              %span ラッピングをご希望の方はこちらにチェックしてください
              %span.tax (有料)
              %span
                詳細
            %img{alt: "商品イメージ", height: "50", width: "70", src: "http://img4.zozo.jp/giftwrapping/pc/cart_giftgray.png"}
        .continuation ショッピングを続ける

    .row-content
      .recommend
        %p カートに入れたアイテムからのお知らせ
        .items
          %ul#top__center__pickup__contents.clearfix
            - 15.times.each do |i|
              #top__center__pickup__contents__item
                -# = render partial: 'tops/item', locals: {image_size: "middle", rank_num: 0, coupon: 0, shop_image: false}
