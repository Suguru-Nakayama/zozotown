%ul.category_list
  %li.category-btn
    .list-title
      = @top_category.name
  - sub_categories.each do |sub_category|
    %li
      - if controller.controller_name == "sub_categories"
        - next_path = request.path_info.sub(/\d+$/, sub_category.id.to_s)
      - else
        - next_path = request.path_info + "/sub_categories/#{sub_category.id}"
      = link_to "ãƒ»#{sub_category.name}", next_path, class: "list-title category-btn"
