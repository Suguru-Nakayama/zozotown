// テスト用
- img_url = @images.sample
%li.item
  .item__images
    - case image_size
    - when "large"
      = link_to "#" do
        = image_tag img_url, class: "image-size-large"
        - if ranking == true
          .rank-icon-wrapper
            - case rank_num
            - when 1
              .rank-icon-large.first-color
                %i.fa.fa-circle
                  %i.rank-num-large
                    = rank_num
            - when 2
              .rank-icon-large.second-color
                %i.fa.fa-circle
                  %i.rank-num-large
                    = rank_num
            - when 3
              .rank-icon-large.third-color
                %i.fa.fa-circle
                  %i.rank-num-large
                    = rank_num
        - case coupon
        - when 1000
          .coupon-tag.coupon-color-one
            .coupon-price
              %span ¥1,000クーポン
        - when 2000
          .coupon-tag.coupon-color-two
            .coupon-price
              %span ¥2,000クーポン
        - when 3000
          .coupon-tag.coupon-color-three
            .coupon-price
              %span ¥3,000クーポン
    - when "middle"
      = link_to "#" do
        = image_tag img_url, class: "image-size-middle"
        - if ranking == true
          .rank-icon-wrapper
            .rank-icon.normal-color
              %i.far.fa-circle.rank-circle
                %i.rank-num-normal
                  = rank_num + 3
        - case coupon
        - when 1000
          .coupon-tag.coupon-color-one
            .coupon-price
              %span ¥1,000クーポン
        - when 2000
          .coupon-tag.coupon-color-two
            .coupon-price
              %span ¥2,000クーポン
        - when 3000
          .coupon-tag.coupon-color-three
            .coupon-price
              %span ¥3,000クーポン
    - when "small"
      = link_to "#" do
        = image_tag img_url, class: "image-size-small"

  .item__info
    - if image_size == "large" || image_size == "middle"
      .item__info__brand
        = link_to "ZOZO", "#"
      .item__info__price.price-block-large.clearfix
        .item__info__price__num.price-font-large
          ¥4,900
        .item__info__price__tax
          税込
    - else
      .item__info__price.price-block-small.clearfix
        .item__info__price__num.price-font-small
          ¥4,900
        .item__info__price__tax
          税込
