%li.item
  .item__images
    - case image_size
    - when "large"
      = image_tag "https://c.imgz.jp/884/32988884/32988884_236_D_215.jpg", class: "image-size-large"
      - if ranking == true
        .rank-icon-wrapper
          - case rank_num
          - when 1
            .rank-icon-large.first-color
              %i.fa.fa-circle
                %i.rank-num-large
                  = rank_num
          - when 2
            .rank-icon-large.second-color
              %i.fa.fa-circle
                %i.rank-num-large
                  = rank_num
          - when 3
            .rank-icon-large.third-color
              %i.fa.fa-circle
                %i.rank-num-large
                  = rank_num

    - when "middle"
      = image_tag "https://c.imgz.jp/884/32988884/32988884_236_D_215.jpg", class: "image-size-middle"
      - if ranking == true
        .rank-icon-wrapper
          .rank-icon.normal-color
            %i.far.fa-circle.rank-circle
              %i.rank-num-normal
                = rank_num + 3
    - when "small"
      = image_tag "https://c.imgz.jp/884/32988884/32988884_236_D_215.jpg", class: "image-size-small"

  .item__info
    - if image_size == "large" || image_size == "middle"
      .item__info__brand
        ZOZO
      .item__info__price.price-block-large.clearfix
        .item__info__price__num.price-font-large
          ¥4,900
        .item__info__price__tax
          税込
    - else
      .item__info__price.price-block-small.clearfix
        .item__info__price__num.price-font-small
          ¥4,900
        .item__info__price__tax
          税込
